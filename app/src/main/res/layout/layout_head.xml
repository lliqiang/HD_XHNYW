<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_head_layout"
    android:gravity="center_vertical">
<ImageView
    android:id="@+id/img_back_common"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:layout_marginLeft="10dp"
    android:src="@drawable/select_back"/>
    <TextView
        android:id="@+id/tv_tilte_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:textColor="@color/colorBrouse"
        android:textSize="23sp"
        android:layout_centerVertical="true"
       />
    <ImageView
        android:id="@+id/los_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_los"
       android:paddingRight="30dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>