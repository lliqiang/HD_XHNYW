<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.hengda.smart.xhnyw.d.fragment.RouteFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@mipmap/bg_toute"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/dot_route_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_dot_weight" />

            <TextView
                android:id="@+id/tv_route_tilte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/dot_route_intro"
                android:text="热门参观路线"
                android:textColor="@color/colorBrouse"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_time_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_route_tilte"
                android:drawableLeft="@mipmap/img_time"
                android:drawablePadding="6dp"
                android:text="约3.5小时"
                android:textColor="@color/colorBrouse"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_count_routee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/tv_time_route"
                android:text="共35件展品"
                android:textColor="@color/colorBrouse"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_fold_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/img_down_expand" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_descript_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="选取场馆最受欢迎的展品，大家感兴趣的由你喜欢的吗"
            android:textColor="@color/colorBrouse"
            android:textSize="18sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_route"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_toute"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingBottom="8dp"/>

</LinearLayout>
